{
  "manifest_version": 2,

  "name": "BannerTools",
  "description": "BannerTools",
  "version": "0.0.0.2",

  "browser_action": {
   "default_icon": "icon16.jpg",
   "default_popup": "tools.html"
  },

 "icons": { 
    "16": "icon16.jpg",
    "48": "icon48.jpg",
    "128": "icon128.jpg"
  },

  "permissions": [
   "activeTab",
   "storage"
   ],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}