{
	"manifest_version": 2,
	"name": "BannerTools",
	"description": "To help facilitate banner development.",
	"version": "1.3",
	"browser_action": {
	  "default_icon": "assets/img/icon16.jpg"
	},
	"icons": {
	  "16": "assets/img/icon16.jpg",
	  "48": "assets/img/icon48.jpg",
	  "128": "assets/img/icon128.jpg"
	},
	"permissions": [
		"storage",
		"activeTab",
	    "http://*/*",
	    "https://*/*",
	    "file://*/*",
	    "<all_urls>"
    ],
	"content_scripts": [
	  {
	    "matches": [
			"http://*/*",
		    "https://*/*",
		    "file://*/*",
		    "<all_urls>"
	    ],
	    "js": [
	    	"assets/js/jquery-3.1.1.min.js",
	    	"assets/js/BannerToolsContent.js"
	    ],
	    "css": [
	    	"assets/css/hover.css",
	    	"assets/css/BannerToolsStyles.css"
	    ]
	  }
	],
	"background": {
	  "scripts": ["assets/js/BannerToolsBackground.js"]
	},
	"web_accessible_resources": ["assets/img/Logo.png"],
	"commands": {
		"toggle-feature": {
			"suggested_key": {"default": "Alt+Z"},
			"description": "Toggle BannerTools"
		}
	},
	"options_page": "assets/html/bannerToolsOptions.html"
}