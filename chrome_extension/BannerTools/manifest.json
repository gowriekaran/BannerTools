{
	"manifest_version": 2,
	"name": "BannerTools",
	"description": "To help facilitate banner development.",
	"version": "1.7.1",
	"browser_action": {
		"default_icon": "assets/img/icon16.jpg"
	},
	"icons": {
		"16": "assets/img/icon16.jpg",
		"48": "assets/img/icon48.jpg",
		"128": "assets/img/icon128.jpg"
	},
	"permissions": [
		"storage",
		"activeTab",
		"http://*/*",
		"https://*/*",
		"file://*/*",
		"<all_urls>"
	],
	"content_scripts": [{
		"matches": [
			"http://*/*",
			"https://*/*",
			"file://*/*",
			"<all_urls>"
		],
		"js": [
			"assets/js/jquery-3.1.1.min.js",
			"assets/js/jquery-ui.min.js",
			"assets/js/BannerToolsContent.js"
		],
		"css": [
			"assets/css/hover-min.css",
			"assets/css/BannerToolsStyles.css"
		]
	}],
	"background": {
		"scripts": [
			"assets/js/jquery-3.1.1.min.js",
			"assets/js/BannerToolsBackground.js"
		]
	},
	"web_accessible_resources": [
		"assets/img/Logo.png",
		"assets/img/camera.png",
		"assets/img/rewind.png",
		"assets/img/forward.png",
		"assets/img/border.png",
		"assets/img/guide.png",
		"assets/img/reveal.png",
		"assets/img/repeat.png",
		"assets/img/margin.png",
		"assets/img/light.png",
		"assets/img/toast.png",
		"assets/js/_BT_BannerObjectDuration.js",
		"assets/js/_BT_BannerObjectLastFrame.js",
		"assets/js/_BT_BannerObjectPlay.js",
		"assets/js/_BT_BannerObjectPause.js",
		"assets/js/_BT_BannerObjectReverse.js",
		"assets/html/_BT_exterior.html",
		"assets/html/_BT_interior.html"
	],
	"commands": {
		"toggle-extension1": {
			"suggested_key": {
				"default": "Alt+Z"
			},
			"description": "Minimize / Maximize BannerTools"
		},
		"toggle-extension2": {
			"suggested_key": {
				"default": "Alt+X"
			},
			"description": "Disable BannerTools"
		}
	}
}